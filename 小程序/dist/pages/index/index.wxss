page {
  padding-bottom: 60px;
  background-color: #F3F5F7;
}
.swiper {
  width: 100%;
  height: 350rpx;
  padding: 24rpx 0 0;
  background-color: #FFF;
}
.swiper .item {
  position: relative;
  width: 100%;
  height: 350rpx;
  padding: 0 13rpx;
  box-sizing: border-box;
}
.swiper .item .item-shadow {
  position: absolute;
  bottom: 25px;
  left: 15%;
  width: 70%;
  height: 0;
  box-shadow: 0 0 50px 1px #000;
  z-index: 1;
}
.swiper .item .item-content {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 10px;
  overflow: hidden;
  z-index: 2;
}
.swiper .item .item-content .image {
  width: 100%;
  vertical-align: top;
}
.wrap {
  margin-top: 30rpx;
  padding: 10rpx 1%;
  background-color: #FFF;
}
.wrap.first {
  margin-top: 0;
  padding-top: 0;
  border-top-color: transparent;
}
.wrap > .title {
  position: relative;
  padding: 15rpx 0 40rpx;
  text-align: center;
}
.wrap > .title:after {
  content: '';
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  width: 344rpx;
  height: 0;
  margin-left: -172rpx;
  border-top: 1px solid  #DDD;
  z-index: 1;
}
.wrap > .title .heading {
  display: inline-block;
  position: relative;
  padding: 0 30rpx;
  color: #333;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  font-weight: 700;
  text-align: center;
  background-color: #FFF;
  z-index: 2;
}
.wrap > .title .navigator {
  position: absolute;
  top: 28rpx;
  right: 0;
  display: none;
  padding-right: 50rpx;
  font-size: 24rpx;
  color: #666;
}
.wrap > .title .navigator:after {
  content: " ";
  position: absolute;
  top: 50%;
  right: 20rpx;
  display: inline-block;
  margin-top: -7rpx;
  height: 14rpx;
  width: 14rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #666;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.wrap > .content {
  width: 100%;
  overflow: hidden;
}
.wrap > .content .box {
  position: relative;
  display: inline-block;
  float: left;
  width: 50%;
  margin-bottom: 30rpx;
  padding: 0 8px;
  box-sizing: border-box;
}
.wrap > .content .box .images {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
  border-radius: 5px;
}
.wrap > .content .box .images image {
  width: 100%;
  max-height: 220rpx;
}
.wrap > .content .box .title {
  height: 2.2em;
  margin: 10rpx 0 15rpx;
  line-height: 1.2;
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
}
.wrap > .content .box .info {
  position: relative;
  font-size: 24rpx;
}
.wrap > .content .box .info .price {
  display: inline-block;
  padding-right: .5em;
  color: #FD5151;
  font-size: 32rpx;
}
.wrap > .content .box .info .price.free {
  color: #00A9FF;
}
.wrap > .content .box .info .old {
  position: relative;
  top: 0;
  display: inline-block;
  font-size: 24rpx;
  color: #939BA5;
  text-decoration: line-through;
}
.wrap > .content.full .box {
  display: block;
  width: 96%;
  margin: 0 auto 20rpx;
  padding: 0 0 10rpx;
  float: none;
}
.wrap > .content.full .box .images {
  position: relative;
  height: 330rpx;
  overflow: hidden;
}
.wrap > .content.full .box .images image {
  position: relative;
  max-height: 320rpx;
  border-radius: 5px;
  z-index: 3;
}
.wrap > .content.full .box .images .images-1 {
  position: absolute;
  top: 5rpx;
  right: 1%;
  left: 1%;
  width: 98%;
  height: 320rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  opacity: .6;
  overflow: hidden;
  z-index: 2;
}
.wrap > .content.full .box .images .images-2 {
  position: absolute;
  top: 10rpx;
  right: 2%;
  left: 2%;
  width: 96%;
  height: 320rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  opacity: .3;
  overflow: hidden;
  z-index: 1;
}
.wrap > .content.full .box .title {
  height: 1em;
  padding: 10rpx 0;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.wrap .more {
  margin: 0 16rpx;
  padding: 14px 0 8px;
  border-top: 1px solid  #E7E7E7;
  font-size: 28rpx;
  text-align: center;
  color: #939BA5;
}
