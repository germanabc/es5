.list {
  position: relative;
  padding-bottom: 70px;
  background-image: url(data:image/jpeg;base64,);
  overflow: auto;
  z-index: 2;
}
.list .box {
  position: relative;
  width: 100%;
  height: 90px;
  margin: 0 0 10px;
  padding: 15px 0;
  background-color: #FFF;
  border-bottom: 1px solid  #EEE;
  overflow: hidden;
}
.list .box.hide {
  display: none;
}
.list .box .cover {
  position: relative;
  top: 6px;
  left: 10px;
  bottom: -1px;
  display: inline-block;
  width: 150px;
  height: 80px;
  border-radius: 5px;
  background-color: #FFF;
  overflow: hidden;
  z-index: 1;
}
.list .box .cover image {
  display: inline-block;
  width: 150px;
  height: 80px;
  vertical-align: top;
}
.list .box .content {
  position: absolute;
  top: 15px;
  left: 175px;
  right: 10px;
  bottom: 10px;
}
.list .box .content .name {
  font-size: 28rpx;
  word-break: break-all;
}
.list .box .content .info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 20px;
  font-size: 24rpx;
  color: #666;
}
.list .box .content .info .price {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 16px;
  color: #E91D00;
}
.list .box .content .info .price.free {
  color: #00C08B;
}
