/*
    列表页样式
*/
page {
  position: relative;
  padding-top: 60px;
  background-color: #FFF;
}
.search {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 55px;
  padding: 10px;
  background-color: #FFF;
  border-bottom: 1px solid #EAEDEE;
  box-shadow: 0 0 20px 2rpx #EAEDEE;
  z-index: 9;
  box-sizing: border-box;
}
.search .search_input {
  position: relative;
  width: 100%;
  height: 36px;
  padding: 3px 45px 3px 35px;
  border-radius: 5px;
  color: #666;
  font-size: 28rpx;
  line-height: 2;
  box-sizing: border-box;
}
.search .search_input:after {
  content: ' ';
  position: absolute;
  top: 7px;
  left: 5px;
  width: 20px;
  height: 20px;
  background-image: url("data:image/png;base64,");
  background-size: contain;
}
.search .cancel {
  position: absolute;
  top: 36rpx;
  right: 30rpx;
  font-size: 28rpx;
}
.search_history {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.search_history .title {
  position: relative;
  padding: 50rpx 0 35rpx;
  font-size: 28rpx;
  color: #939BA5;
  border-bottom: 1px solid  #DFDFDF;
}
.search_history .title .clear {
  display: inline-block;
  float: right;
  color: #00A9FF;
  font-size: 28rpx;
}
.search_history .history {
  width: 105%;
  padding: 50rpx 0 0;
}
.search_history .history .history-item {
  display: inline-block;
  margin: 0 35rpx 35rpx 0;
  padding: 10px 20px;
  color: #333;
  font-size: 26rpx;
  line-height: 1.3;
  letter-spacing: 2rpx;
  border-radius: 66px;
  background-color: #EFEFF2;
}
.list {
  position: relative;
  background-color: #FFF;
  overflow: auto;
  z-index: 2;
}
.list .result {
  padding: 20rpx 30rpx;
}
.list .result .num {
  display: inline-block;
  color: #00A9FF;
  font-size: 28rpx;
}
.list .result .text {
  display: inline-block;
  color: #939BA5;
  font-size: 28rpx;
}
.list .box {
  position: relative;
  width: 100%;
  height: 145rpx;
  margin: 0 0 50rpx;
  background-color: #FFF;
  overflow: hidden;
}
.list .box.hide {
  display: none;
}
.list .box .cover {
  position: relative;
  top: 6px;
  left: 30rpx;
  bottom: -1px;
  display: inline-block;
  width: 244rpx;
  height: 130rpx;
  border-radius: 5px;
  background-color: #FFF;
  overflow: hidden;
  z-index: 1;
}
.list .box .cover image {
  display: inline-block;
  width: 244rpx;
  vertical-align: top;
}
.list .box .content {
  position: absolute;
  top: 5rpx;
  left: 300rpx;
  right: 10px;
  bottom: 0;
}
.list .box .content .name {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
}
.list .box .content .info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 20px;
  font-size: 24rpx;
  color: #666;
}
.list .box .content .info .user {
  position: absolute;
  top: 0;
  left: 0;
  width: 20%;
}
.list .box .content .info .number {
  position: absolute;
  top: 0;
  left: 25%;
}
.list .box .content .info .price {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 16px;
  color: #E91D00;
}
.list .box .content .info .price.free {
  color: #00C08B;
}
